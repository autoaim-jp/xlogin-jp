{
  "source": {
    "include": ["app.js", "setting", "output.js", "core.js", "input.js", "action.js", "lib.js", "view", "doc/jsdoc/namespace.js"],
    "includePattern": ".+\\.js(doc|x)?$"
  },
  "sourceType": "module",
  "tags": {
    "allowUnknownTags": true
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "recurse": true,
    "destination": "./doc/jsdoc/html/"
  }
}

